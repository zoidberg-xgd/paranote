{
  "name": "paranote",
  "version": "0.1.1",
  "description": "ParaNote: Lightweight paragraph comments service for novel and article sites",
  "type": "module",
  "main": "index.js",
  "bin": {
    "paranote": "./bin/paranote.js"
  },
  "exports": {
    ".": "./index.js",
    "./server": "./server.js",
    "./config": "./config.js",
    "./storage": "./storage.js",
    "./utils": "./utils.js",
    "./fetcher": "./fetcher.js"
  },
  "files": [
    "index.js",
    "server.js",
    "config.js",
    "storage.js",
    "storage-file.js",
    "storage-mongo.js",
    "storage-interface.js",
    "utils.js",
    "fetcher.js",
    "browser-forge.js",
    "routes/",
    "public/",
    "dist/",
    "bin/",
    "README.md"
  ],
  "scripts": {
    "start": "node bin/paranote.js start",
    "server": "node server.js",
    "start:api": "DEPLOY_MODE=api node server.js",
    "start:reader": "DEPLOY_MODE=reader node server.js",
    "build:embed": "esbuild public/embed.js --bundle --minify --format=iife --global-name=ParaNoteEmbed --outfile=dist/paranote.min.js",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "comments",
    "annotation",
    "novel",
    "paragraph",
    "reader",
    "embed",
    "hypothesis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zoidberg-xgd/paranote.git"
  },
  "homepage": "https://github.com/zoidberg-xgd/paranote#readme",
  "bugs": {
    "url": "https://github.com/zoidberg-xgd/paranote/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "zoidberg-xgd",
  "license": "MIT",
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dotenv": "^17.2.3",
    "jsdom": "^27.2.0",
    "mongoose": "^9.0.0",
    "puppeteer": "^24.32.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "overrides": {
    "rimraf": "^5.0.0",
    "glob": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jsonwebtoken": "^9.0.2",
    "supertest": "^7.1.4",
    "typescript": "^5.6.0",
    "vitest": "^4.0.15"
  }
}
